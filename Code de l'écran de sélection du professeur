canva_panel1 = Canvas(panel1, width=1400, height=1000, bg="#955B43", highlightthickness=0)
canva_panel1.place(x=0, y=10)

Label(panel1, text="Les Professeurs de l'académie", font=("Modern", 40),bg="#FFF2A7").place(x=380, y=15)
