def ouvrir_j():
    fen = Toplevel()  
    fen.title("Lettre pour l'Ermite pas net")
    fen.geometry("1200x800")

    nom = StringVar()
    clan = StringVar()
    plainte = StringVar()
    jour = StringVar()
    heure = StringVar()

    
    panel = Frame(fen)
    panel.pack(fill="both", expand=True)

    canvas = Canvas(panel)
    canvas.pack(fill="both", expand=True)

    
    original_image = Image.open(r"C:\Users\feero\OneDrive\Desktop\par1.png")

    
    TEXT_OFFSET_X = 240
    TEXT_Y = 175
    TEXT_WIDTH = 820

    
    entry_nom = Entry(panel, textvariable=nom, width=25)
    entry_plainte = Entry(panel, textvariable=plainte, width=40)
    entry_jour = Entry(panel, textvariable=jour, width=18)
    entry_heure = Entry(panel, textvariable=heure, width=18)
    entry_clan = Entry(panel, textvariable=clan, width=25)
    bouton = Button(panel, text="Valider")

   
    def redraw(event=None):
        canvas.delete("all")
        
        win_width = canvas.winfo_width()
        win_height = canvas.winfo_height()
        
        image = original_image.resize((win_width, win_height), Image.LANCZOS)
        photo = ImageTk.PhotoImage(image)
        canvas.image = photo
        canvas.create_image(0, 0, anchor=NW, image=photo)
        
        TEXT_X = 60 + TEXT_OFFSET_X
        
        
        canvas.create_text(
            TEXT_X, TEXT_Y,
            anchor=NW,
            text="Cher Jiraya,\nNous sommes les parents de",
            font=("Times New Roman", 12),
            width=TEXT_WIDTH
        )

        canvas.create_window(TEXT_X + 300, TEXT_Y + 30, window=entry_nom)  

        canvas.create_text(
            TEXT_X, TEXT_Y + 80,
            anchor=NW,
            text="élève de l’Académie ninja de Konoha.\nNous nous permettons de vous écrire car nous souhaiterions convenir d’un "
                 "rendez-vous parents-professeurs afin de discuter de ses progrès, "
                 "votre comportement et son utilisation excessive du jutsu",
            font=("Times New Roman", 12),
            width=TEXT_WIDTH
        )

        
        canvas.create_text(
            TEXT_X, TEXT_Y + 180,
            anchor=NW,
            text="Notre enfant nous a récemment rapporté que",
            font=("Times New Roman", 12)
        )
        canvas.create_window(TEXT_X + 300, TEXT_Y + 180, anchor=NW, window=entry_plainte)

        
        canvas.create_text(
            TEXT_X, TEXT_Y + 220,
            anchor=NW,
            text="Nous sommes disponibles le",
            font=("Times New Roman", 12)
        )
        canvas.create_window(TEXT_X + 210 + 25, TEXT_Y + 226, window=entry_jour)  

        canvas.create_text(
            TEXT_X + 360, TEXT_Y + 220,
            anchor=NW,
            text="à partir de",
            font=("Times New Roman", 12)
        )
        canvas.create_window(TEXT_X + 470 + 16, TEXT_Y + 226, window=entry_heure)

        canvas.create_text(
        TEXT_X, TEXT_Y + 260,
        anchor=NW,
        text="mais restons bien entendu flexibles selon votre emploi du temps chargé de 'peut-etre' futur hokage.\n"
         "Nous vous remercions par avance pour votre patience, votre pédagogie et "
         "votre dévouement envers les jeunes ninjas du village caché de Konoha.",
        font=("Times New Roman", 12),
        width=TEXT_WIDTH
        )

        canvas.create_text(
            TEXT_X, TEXT_Y + 380 - 30,  
            anchor=NW,
            text="Le Clan :",
            font=("Times New Roman", 12)
        )
        canvas.create_window(TEXT_X + 135, TEXT_Y + 380 - 30 + 9, window=entry_clan)  

        
        canvas.create_window(TEXT_X + 740, TEXT_Y + 530, window=bouton)

    canvas.bind("<Configure>", redraw)
J.config(command=ouvrir_j)


